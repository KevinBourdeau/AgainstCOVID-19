{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
	<!-- Compiled and minified JavaScript -->
	<script src="{{ asset('js/jquery.js') }}"></script>
	<script src="{{ asset('js/autocomplete.js') }}"></script>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoq3pqBB4rNSPZtWBmRH60T-T-CLr9qWE&libraries=places"></script>

{% endblock %}

{% block body %}

	<div class='container py-5'>

		<hr class="featurette-divider">

		<div class='py-1'>

			<h2 class='text-center py-2'>
				Formulaire de demande
			</h2>

			<p class='px-4'>
				Ici vous pouvez rentrer toutes les informations nécessaires à votre demande. Veuillez vous assurer que tous les champs sont bien remplis et correspondent bien à vos coordonnées, ces données seront ensuite utilisées afin de vous recontacter et satisfaire votre demande.
			</p>

		</div>

		<hr class="featurette-divider">

		{# Affichage du formulaire avec les données entrées #}
		{{ form_start(form)}}

		{{ form_row(form.nom, {'label': 'Nom', 'attr': {'placeholder': 'Entrez votre nom'}})}}
		{{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'placeholder': 'Entrez votre prénom'}})}}
		{{ form_row(form.nomEtablissement, {'label': 'Nom établissement', 'attr': {'placeholder': 'Entrez le nom de votre établissement'}})}}
		{{ form_row(form.tel, {'label': 'Numéro téléphone', 'attr': {'placeholder': 'Entrez votre numéro de téléphone'}})}}
		{{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Entrez votre email'}})}}
		{{ form_row(form.quantite, {'label': 'Quantité', 'attr': {'placeholder': 'Entrez la quantité que vous voulez'}})}}
		{#Affichage du bouton valider  #}
		<input class='btn btn-dark btn-large btn-block py-3' value='Valider' type="submit" name="submitpost">

		{{ form_end(form)}}

		<hr class="featurette-divider">

	</div>


{% endblock %}
